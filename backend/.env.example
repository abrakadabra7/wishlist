# App
APP_NAME=Wishlist API
DEBUG=false

# Database (async for app)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/wishlist
# Sync URL for Alembic
DATABASE_URL_SYNC=postgresql://postgres:postgres@localhost:5432/wishlist

# JWT (use a long random secret in production)
JWT_SECRET_KEY=change-me-in-production-use-long-random-string
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS (comma-separated or JSON array)
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]

# Public link token length
PUBLIC_LINK_TOKEN_LENGTH=32
